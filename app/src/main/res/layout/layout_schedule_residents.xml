<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:elevation="20dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:outlineAmbientShadowColor="@color/colorBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:id="@+id/layoutScheduleResidents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="10dp">
            <LinearLayout
                android:id="@+id/scheduleImageTypeResidents"
                android:background="@drawable/bio_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:elevation="5dp"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtScheduleDayResidents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:elevation="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="Type: "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:id="@+id/txtScheduleTypeResidents"
                        android:text="9pm"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="Start of Collection: "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:id="@+id/txtScheduleStartResident"
                        android:text="9pm"/>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:id="@+id/txtScheduleActiveStatusResidents"
                android:padding="5dp"
                android:text="active"/>
            <LinearLayout
                android:id="@+id/scheduleActiveStatusResidents"
                android:background="@drawable/circle"
                android:layout_width="20dp"
                android:layout_height="20sp"
                android:orientation="vertical"
                android:elevation="5dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>