<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_warning_24_red"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Danger!"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:text="The weight of the trash bin is extremely high; adding more garbage may cause the weighing sensor to fail."/>

    <Button
        android:id="@+id/btnWeightDanger"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_round_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collect" />

</LinearLayout>