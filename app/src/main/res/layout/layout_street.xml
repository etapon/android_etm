<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:outlineAmbientShadowColor="@color/colorBlack">

    <LinearLayout
        android:id="@+id/streetCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:id="@+id/layoutStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_location_city_24"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtStreetName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street Name"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/streetStatus"
                android:background="@drawable/ic_baseline_navigate_next_24"
                android:layout_width="20dp"
                android:layout_height="20sp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>